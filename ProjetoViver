CREATE TABLE login
(
	id_login INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    email VARCHAR(255) NOT NULL,
    senha VARCHAR(255),
    situacao int
)DEFAULT CHARSET = utf8;

describe login;
describe funcionario;

select * from funcionario;
select * from login;
drop table login;

delete from funcionario where cpf_funcionario = '438.024.498-94';

